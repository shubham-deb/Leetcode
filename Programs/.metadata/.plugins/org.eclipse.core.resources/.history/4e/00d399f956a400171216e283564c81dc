import java.util.ArrayList;

public class pascal_triangle {

    public ArrayList<ArrayList<Integer>> generate(int numRows) {
    	
    	ArrayList<ArrayList<Integer>> row = new ArrayList<ArrayList<Integer>>();
    	ArrayList<Integer> column = new ArrayList<Integer>();
    	
		column.add(1);
		row.add(column); 
    	
    	if(numRows == 1){
    		return row;
    	}
    	
    	ArrayList<Integer> column2 = new ArrayList<Integer>();
		column2.add(1);
		column2.add(1);
		row.add(column2);
		
		if(numRows == 2){
    		return row;
    	}
		
    	for(int i=2;i<numRows;i++){
    		System.out.println("i");
    		ArrayList<Integer> new_column = new ArrayList<Integer>();
    		new_column.add(1);
			int prev = 1;
    		for(int r:row.get(i-1)){
    			int next = r;
    			if(r!=1){
    				int val = prev + next;
    				prev = r;
    				new_column.add(val);
    			}
    		}
    		new_column.add(1);
    	}
    	
    	return row;
    }
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int numRows = 3;
		pascal_triangle obj=  new pascal_triangle();
		System.out.println(obj.generate(numRows));
	}

}
